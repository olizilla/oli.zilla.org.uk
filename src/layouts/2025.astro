---
import '../base.css'
import Prose from '../components/Prose.astro';
const { title } = Astro.props.frontmatter || Astro.props;
const logoLink = Astro.props.logoLink ?? '/blog/'
---
<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<title>{title}</title>
	<link href="http://www.gravatar.com/avatar/9d1124bf8f7fe1b93a92a7927accd9a9?s=80" rel="icon" type="image/png"  />
</head>
<body class="min-h-screen inter-base">
  <div class="mx-auto px-2 max-w-[800px]">
    <header>
      <h1 class="text-2xl font-bold py-10">
        <a href={logoLink} class="inline-block cursor-crosshair">
          <img title="❤️" alt="" src="/res/img/olizilla-trace.svg" style=" width:140px; height:140px; vertical-align:-92px;" class="inline-block"/>
        </a>
      </h1>
    </header>
    <Prose>
      <slot/>
    </Prose>
  </div>
	<footer class="pt-16 text-center text-2xl -mb-1">🌻</footer>
</body>
</html>
